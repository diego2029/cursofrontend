gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24
gris_text = #7A7A7A

@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?-lqx5yj');
	src:url('../fonts/icomoon.eot?#iefix-lqx5yj') format('embedded-opentype'),
		url('../fonts/icomoon.ttf?-lqx5yj') format('truetype'),
		url('../fonts/icomoon.woff?-lqx5yj') format('woff'),
		url('../fonts/icomoon.svg?-lqx5yj#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja	
	
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white, 0.7)
	text-align center
	padding 1em 0em
	width 100%
	
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
		
		.crea
			font-size 12px
			&:before
			&:after
				content " - "
	
header
	position relative	
	background gris_oscuro
	color white
	padding 0.5em
	overflow hidden
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1
	
	.logo
		
		border-right 1px solid azul
		width 60px
		float left

		img
			width 52px

	.contenido
		margin 0 80px 0 70px
		
		.filtro
			color azul
			text-decoration none
			font-style italic
			font-weight bold
			font-size 14px
			
		.publicar			
			font-family "iconos"
			background naranja
			color white
			font-style italic
			padding 0.1em 0.5em	
			border-radius 2px
			text-decoration none
			text-shadow 2px 2px 0 gray				
			float right
			margin -0.2px 1em 0 0
			&:before
				content "\e600"
				color white
			
			
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario		
		right 10px
		top 10px
		position absolute
		
		.avatar
			margin -3px 1em 0 0
			position relative
			z-index 2
			
			img
				width 60px
				border-radius 50%
		.flecha		
			top 15px
			right 0
			padding 2px
			position absolute
			display block
			background naranja
			color white
			text-align right
			width 50%
			border-radius 0.4em
			text-decoration none
			&:after
				font-family "iconos"
				content "\e601"
				font-size 10px
				vertical-align center
				padding 0.1em 0.2em 0.1em 0.2em

nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		content ""
		border-left 7px solid white
		border-bottom 20px solid azul
		border-top 20px solid azul
		position absolute
		
	
	.menu
		height 40px
		line-height 40px
		margin 0px		
		overflow-x auto
		white-space nowrap
		padding-left 10px
		
		li
			display inline-block
			
			a 
				color white
				display block
				margin 0 0.5em
				text-decoration none
				padding 0 0.2em
				
.posts
	padding 0.5em	
	
	.post
		background white
		color gris_text
		box-shadow 2px 2px 10px rgba(black, 0.5)
		border-radius 0 0 0.5em 0.5em
		margin-bottom 1em
		
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			
			.datos
				float right
				.comentarios
					vertical-align center
					background gris_text
					color white
					padding 5px 8px
					margin 0 1em 0 0
					text-decoration none
					border-radius 3px
					font-size 14px
				
				.estrella
					text-decoration none
					font-family "iconos"
					color rgba(255,200,0,1)
					
					&:before
						content "\e601"

			.votos
				float left
				
				.down
				.up
					text-decoration none
					font-family "iconos"
					
				.down
					color red
					&:before
						content "\e603"			
					
				.up
					color green
					&:before
						content "\e602"
						
				.total
					font-size 14px
					display inline-block
					vertical-align center
					margin -0.2em 0.1em 0 0.1em
								
		.descripcion
			color gris_text			
			
			.detalles
				height 160px
				margin-left 130px
				
				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0
					
				.autor
					margin 0.5em 0 2em 0
					
				.tag
					background azul
					color white
					text-decoration none
					border-radius 0.2em
					padding 0.2em 0.5em
					
				.fecha
					float right
					margin 0 1em 0 0
					
			.imagen
				float left
				margin 0
									
				img
					height 160px
					vertical-align top
					width 120px

@media screen and (min-width: 768px)

	header
		.contenido
			.publicar
				position relative
				padding-left 3em
				
				&:before
					left 0
					top -10px
					font-size 2.5em
					position absolute
				
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top		
			&:nth-child(odd)
				margin-left 1%
				margin-right 1.5%
				
